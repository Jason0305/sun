<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd
		http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd
		http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.3.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <!-->>>>>>>>>>>>>>>Spring配置文件，主要配置和业务逻辑相关<<<<<<<<<<<<<<<-->
    <!--=================== 开启组件扫描 ================-->
    <context:component-scan base-package="com.lonton.petstore.controller"><!-- use-default-filters="false">-->
        <!-- 只扫描控制器 -->
        <!--<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>-->
    </context:component-scan>

    <!--=================== 配置视图解析器 ================-->
    <!--===== 视图解析器1:html视图解析器 ======-->
    <!--配置freeMarker模板路径-->
    <bean id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="/WEB-INF/views/html/"/>
        <!-- 设置页面中文乱码问题 -->
        <property name="freemarkerSettings">
            <props>
                <prop key="defaultEncoding">UTF-8</prop>
                <!-- 设置页面中文乱码问题 -->
                <!--<prop key="default_encoding">UTF-8</prop>-->
                <!--模板的编码格式 -->
                <!--<prop key="locale">UTF-8</prop>-->
                <!-- 本地化设置 -->
                <!--<prop key="url_escaping_charset">UTF-8</prop>-->
                <!--<prop key="template_update_delay">3600</prop>-->
            </props>
        </property>
    </bean>
    <bean id="fmXmlEscape" class="freemarker.template.utility.XmlEscape"/>
    <!-- 配置html的freeMarker视图解析器 -->
    <bean id="htmlViewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.freemarker.FreeMarkerView"/>
        <property name="contentType" value="text/html;charset=UTF-8"/>
        <property name="cache" value="true"/>
        <property name="suffix" value=".html"/>
        <property name="order" value="0"/>
    </bean>
    <!--======== 视图解析器2:jsp视图解析器 ========-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!--配置前缀-->
        <property name="prefix" value="/WEB-INF/views/jsp/"/>
        <!--配置后缀-->
        <property name="suffix" value=".jsp"/>
        <property name="contentType" value="text/html;charset=UTF-8"/>
        <property name="order" value="1"/>
    </bean>

    <!-- 配置拦截器链 -->
    <mvc:interceptors>
        <!-- 配置第1个拦截器 -->
        <mvc:interceptor>
            <!-- 1. 拦截的路径 -->
            <mvc:mapping path="/user/**"/>
            <mvc:mapping path="/address/**"/>
            <mvc:mapping path="/cart/**"/>
            <mvc:mapping path="/order/**"/>
            <mvc:mapping path="/main/index.do"/>
            <!-- 2. 例外的路径，不拦截的路径，即白名单-->
            <mvc:exclude-mapping path="/user/reg.do"/>
            <mvc:exclude-mapping path="/user/handle_reg.do"/>
            <mvc:exclude-mapping path="/user/login.do"/>
            <mvc:exclude-mapping path="/user/username_check.do"/>
            <mvc:exclude-mapping path="/user/handle_login.do"/>
            <!-- 3. 指定拦截器类 -->
            <bean class="com.lonton.petstore.interceptor.LoginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>


    <!--能支持SpringMVC更高级的一些功能，如JSR303校验，快捷的ajax...-->
    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.StringHttpMessageConverter">
                <constructor-arg value="UTF-8"/>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>
    <mvc:default-servlet-handler />
    <mvc:resources mapping="/js/**" location="/js/"/>
    <mvc:resources mapping="/css/**" location="/css/"/>
    <mvc:resources mapping="/images/**" location="/images/"/>
    <mvc:resources mapping="/plug-in/**" location="/plug-in/"/>
    <!--<mvc:resources mapping="/user/**" location="/static/"/>-->

</beans>